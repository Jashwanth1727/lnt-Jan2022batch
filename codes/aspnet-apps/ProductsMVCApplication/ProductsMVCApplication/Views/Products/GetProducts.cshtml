@using ProductsMVCApplication.Models
@model List<Product>


@{   
    List<Product> products = this.Model;
}
    <h4>All Products</h4>
    <hr />
    <ul>
        @foreach (Product p in products)
        {
            <li>@p.ProductName</li>
        }
    </ul>

